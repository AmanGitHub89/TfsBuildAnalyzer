<UserControl x:Class="TfsBuildAnalyzer.UserControls.ProgressControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:TfsBuildAnalyzer"
             mc:Ignorable="d" 
             Name="ProgressUserControl"
             d:DesignHeight="120" d:DesignWidth="400">
    <Grid Margin="0,0,0,0">
            <Label Name="StepLabel" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,10,0,0" />
            <Label Name="ProgressLabel" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,40,0,0" />
            <ProgressBar Name="ProgressBar1" Height="20" HorizontalAlignment="Stretch" VerticalAlignment="Top" Margin="15,64,15,0" />
    </Grid>
</UserControl>
