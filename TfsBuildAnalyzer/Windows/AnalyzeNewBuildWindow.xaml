<types:FixedSizeChildWindow x:Class="TfsBuildAnalyzer.Windows.AnalyzeNewBuildWindow"
                      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                      xmlns:types="clr-namespace:TfsBuildAnalyzer.Types"
                      mc:Ignorable="d"
                      Loaded="AnalyzeNewBuildWindow_OnLoaded"
                      WindowStartupLocation="CenterScreen"
                      Title="Analyze new Build" Height="190" Width="500">
    <Grid HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Background="DarkGray">
        <Label Name="DropFolderPathLabel" Margin="10,20,0,0" Padding="0,0,0,0" HorizontalAlignment="Left" VerticalAlignment="Top" HorizontalContentAlignment="Left" Content="Drop Folder Path" />
        <TextBox Name="DropFolderPathTextBox" HorizontalAlignment="Stretch" Margin="10,45,10,0" Height="23" TextWrapping="NoWrap" VerticalAlignment="Top" />
        <Button Name="AnalyzeButton" Click="AnalyzeButton_OnClick" Height="26" Width="100" Margin="0,100,0,0" Content="Analyze" HorizontalAlignment="Center" VerticalAlignment="Top" />
    </Grid>
</types:FixedSizeChildWindow>
